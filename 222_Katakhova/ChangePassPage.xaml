<Page x:Class="_222_Katakhova.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Смена пароля" Background="White">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Смена пароля" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" Margin="0,5"/>
            <TextBox x:Name="TbLogin" Margin="0,5"/>

            <TextBlock Text="Текущий пароль:" Margin="0,5"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="0,5"/>

            <TextBlock Text="Новый пароль:" Margin="0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,5"/>

            <TextBlock Text="Подтвердите новый пароль:" Margin="0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5"/>

            <Button x:Name="BtnChangePassword" Content="Сменить пароль" 
                    Click="BtnChangePassword_Click" Margin="0,20" Height="30"/>
        </StackPanel>
    </Grid>
</Page>