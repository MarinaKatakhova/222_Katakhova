<Window x:Class="_222_Katakhova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Katakhova"
        mc:Ignorable="d"
        Title="Учет платежей - Katakhova" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Content="Назад" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Height="30" 
                        Width="80"
                        Click="BackButton_Click"
                        Margin="10,0,0,0"/>

                <TextBlock Text="Система учета платежей" 
                           Grid.Column="1"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"/>

                <ComboBox x:Name="ThemeComboBox"
                          Grid.Column="2"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Width="150"
                          Height="30"
                          Margin="0,0,10,0"
                          Foreground="Black"
                          SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Стандартная тема" Tag="Dictionary"/>
                    <ComboBoxItem Content="Темная тема" Tag="DictionaryDarkTheme"/>
                </ComboBox>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Margin="10"
               />

        <Border Grid.Row="2">
            <Grid>
                <TextBlock x:Name="DateTimeNow" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,20,0"
                           VerticalAlignment="Center" 
                           FontSize="12"
                           FontFamily="Tahoma"/>

                <TextBlock Text="222_Katakhova" 
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontFamily="Tahoma"/>
            </Grid>
        </Border>
    </Grid>
</Window>