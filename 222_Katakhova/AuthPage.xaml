<Page x:Class="_222_Katakhova.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной контейнер авторизации -->
        <Border Grid.Column="1" Grid.Row="1"
                Background="{DynamicResource SecondaryBrush}"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{DynamicResource PrimaryBrush}"
                Padding="30">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Авторизация"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"/>
                
                <TextBlock Text="Логин"
                           Grid.Row="2"
                           FontWeight="SemiBold"/>

                <TextBox x:Name="TextBoxLogin" 
                         Grid.Row="4"
                         TextWrapping="Wrap" 
                         ToolTip="Введите логин или почту"/>

                <TextBlock Text="Пароль"
                           Grid.Row="6"
                           FontWeight="SemiBold"/>

                <PasswordBox x:Name="PasswordBox" 
                             Grid.Row="8"
                             ToolTip="Введите пароль"/>

                <Button x:Name="ButtonEnter" 
                        Grid.Row="10"
                        Content="Вход" 
                        ToolTip="Кнопка входа"
                        Click="ButtonEnter_OnClick"/>

                <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ButtonReg"
                            Content="Регистрация" 
                            ToolTip="Кнопка регистрации"
                            Click="ButtonReg_Click"
                            Width="120"
                            Margin="0,0,10,0"/>

                    <Button x:Name="ButtonChangePassword" 
                            Content="Смена пароля" 
                            ToolTip="Кнопка смены пароля"
                            Click="ButtonChangePassword_Click"
                            Width="120"/>
                </StackPanel>

                <StackPanel Grid.Row="14" Orientation="Vertical" Visibility="Hidden" x:Name="CaptchaPanel">
                    <TextBlock x:Name="labelCaptcha" 
                               Text="Введите капчу:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <Border BorderThickness="1" 
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,0,0,10">
                        <TextBlock x:Name="captcha"
                                   HorizontalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"/>
                    </Border>

                    <TextBox x:Name="captchaInput"
                             Text=""
                             Margin="0,0,0,10"/>

                    <Button x:Name="submitCaptcha" 
                            Content="Подтвердить" 
                            ToolTip="Подтвердить ввод капчи"
                            Click="submitCaptcha_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>