<Page x:Class="_222_Katakhova.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Диаграммы платежей">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <ComboBox x:Name="CmbUser" Width="200" Margin="0,0,20,0" DisplayMemberPath="FIO" SelectionChanged="UpdateChart"/>

            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <ComboBox x:Name="CmbDiagram" Width="150" Margin="0,0,20,0" SelectionChanged="UpdateChart"/>

            <Button x:Name="BtnExportExcel" Content="Экспорт в Excel" Width="120" Margin="0,0,10,0"
                    Click="BtnExportExcel_Click"/>

            <Button x:Name="BtnExportWord" Content="Экспорт в Word" Width="120"
                    Click="BtnExportWord_Click"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="5" BorderThickness="1" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChartPanel" Margin="10" Cursor="">
                    <TextBlock x:Name="ChartInfoText" Text="Выберите пользователя и тип диаграммы для отображения данных" 
                               FontSize="14" TextWrapping="Wrap" TextAlignment="Center"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>