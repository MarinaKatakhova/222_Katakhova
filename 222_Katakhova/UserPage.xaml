<Page x:Class="_222_Katakhova.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Пользователи">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Введите ФИО для поиска:" 
                       FontSize="9" 
                       VerticalAlignment="Center"/>

            <TextBox x:Name="fioFilterTextBox" 
                     Margin="7,7,0,7" 
                     MinWidth="100" 
                     TextChanged="fioFilterTextBox_TextChanged"/>

            <TextBlock Text="Сортировка по ФИО:" 
                       Margin="10,0,0,0" 
                       FontSize="9" 
                       VerticalAlignment="Center"/>

            <ComboBox SelectionChanged="sortComboBox_SelectionChanged" 
                      Margin="7,0,0,0" 
                      x:Name="sortComboBox" 
                      SelectedIndex="0" 
                      VerticalContentAlignment="Center" 
                      VerticalAlignment="Center">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>

            <CheckBox IsChecked="False" 
                      Checked="onlyAdminCheckBox_Checked" 
                      Unchecked="onlyAdminCheckBox_Unchecked" 
                      Content="Только администраторы" 
                      x:Name="onlyAdminCheckBox" 
                      VerticalContentAlignment="Center" 
                      Margin="10,0,0,0"/>

            <Button x:Name="clearFiltersButton" 
                    Content="Очистить фильтр" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Padding="5,8,39,4" 
                    Height="34" 
                    FontSize="10" 
                    Click="clearFiltersButton_Click"/>
        </WrapPanel>

        <ListView Name="ListUser" 
                  Grid.Row="1" 
                  HorizontalContentAlignment="Center" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="10">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10" Width="220">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   VerticalAlignment="Center" 
                                   TextAlignment="Center" 
                                   Width="200" 
                                   TextWrapping="Wrap" 
                                   Text="{Binding FIO}" 
                                   HorizontalAlignment="Center" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>

                        <Image Grid.Row="1" 
                               Width="200" 
                               Height="200"
                               Stretch="UniformToFill" 
                               HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.Converter>
                                        <local:ByteArrayToImageConverter/>
                                    </Binding.Converter>
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="C:\Users\Katak\source\repos\ConsoleApplication4\x64\Debug/149071.png"/>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Row="2" 
                                   VerticalAlignment="Center" 
                                   TextAlignment="Center" 
                                   Width="200" 
                                   HorizontalAlignment="Center" 
                                   FontSize="16" 
                                   Text="{Binding Role}"
                                   Margin="0,5,0,10"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>