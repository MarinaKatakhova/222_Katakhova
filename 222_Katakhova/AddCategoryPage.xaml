<Page x:Class="_222_Katakhova.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление категории">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding TitleText}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#2C3E50"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Название категории:" 
                       FontSize="16" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"
                       Foreground="#2C3E50"/>
            <TextBox x:Name="TBCategoryName" 
                     Width="300"
                     Height="35"
                     FontSize="14"
                     Padding="5"
                     Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     KeyDown="TBCategoryName_KeyDown"/>
        </StackPanel>

        <TextBlock x:Name="ErrorText" 
                   Grid.Row="2"
                   FontSize="12" 
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="ButtonSaveCategory" 
                    Content="Сохранить" 
                    Click="ButtonSaveCategory_Click" 
                    Width="120" 
                    Height="35"
                    Margin="0,0,20,0"
                    FontSize="14"
                    FontWeight="Bold"/>

            <Button x:Name="ButtonClean" 
                    Content="Очистить" 
                    Click="ButtonClean_Click" 
                    Width="120" 
                    Height="35"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>