<Page x:Class="_222_Katakhova.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
   Title="Пользователи">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10" BorderThickness="0 0 0 1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Grid.Column="1" 
                         TextChanged="SearchTextBox_TextChanged"
                         Padding="5" VerticalContentAlignment="Center"
                         ToolTip="Введите текст для поиска по логину, ФИО или роли"/>

                <Button x:Name="ClearSearchButton" Grid.Column="2" 
                        Content="Очистить" Margin="10,0,0,0"
                        Click="ClearSearchButton_Click"
                        ToolTip="Очистить поиск"/>

                <Button x:Name="SortButton" Grid.Column="3" 
                        Content="Сортировка А-Я" Margin="10,0,0,0"
                        Click="SortButton_Click"
                        ToolTip="Сортировка по ФИО от А до Я"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Padding="10" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фильтр по роли:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="RoleFilterComboBox" 
                          SelectionChanged="RoleFilterComboBox_SelectionChanged"
                          Width="120" Margin="0,0,20,0">
                    <ComboBoxItem Content="Все роли" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="User"/>
                </ComboBox>

                <Button x:Name="ClearFiltersButton" 
                        Content="Сбросить фильтры"
                        Click="ClearFiltersButton_Click"
                        ToolTip="Сбросить все фильтры"/>
            </StackPanel>
        </Border>

        <TextBlock x:Name="ResultsInfoText" Grid.Row="2" 
                   Margin="10,5" FontSize="12"/>

        <DataGrid Grid.Row="3" x:Name="DataGridUser" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="120"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="250"/>
                <DataGridTemplateColumn Width="120" Header="Действия">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" Content="Редактировать" 
                                    ToolTip="Редактировать данные" 
                                    Click="ButtonEdit_Click"
                                    Padding="5,2" FontSize="10"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="4" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="ButtonAdd" ToolTip="Добавить данные" 
                        Content="Добавить пользователя" HorizontalAlignment="Left" 
                        Click="ButtonAdd_Click" Padding="10,5" MinWidth="120"/>

                <Button Grid.Column="1" x:Name="ButtonDel" ToolTip="Удалить данные" 
                        Content="Удалить выбранных" HorizontalAlignment="Right" 
                        Click="ButtonDel_Click" Padding="10,5" MinWidth="120"/>
            </Grid>
        </Border>
    </Grid>
</Page>