<Page x:Class="_222_Katakhova.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Katakhova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Логин:"/>
        <TextBox x:Name="LoginBox" Margin="0,5"/>

        <TextBlock Text="ФИО:" Margin="0,10,0,0"/>
        <TextBox x:Name="FIOBox" Margin="0,5"/>

        <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox1" Margin="0,5"/>

        <TextBlock Text="Подтвердите пароль:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox2" Margin="0,5"/>

        <TextBlock Text="Роль:" Margin="0,10,0,0"/>
        <ComboBox x:Name="RoleComboBox" Margin="0,5">
            <ComboBoxItem Content="User" IsSelected="True"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                Click="RegisterButton_Click" Margin="0,20" Height="30"/>
    </StackPanel>
</Page>